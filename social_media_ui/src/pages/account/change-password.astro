---
import FormComponent from '../../components/Form.astro';

const changePasswordFields = [
  { id: 'old_password', label: 'Current Password', type: 'password', placeholder: 'Enter your current password' },
  { id: 'new_password1', label: 'New Password', type: 'password', placeholder: 'Enter your new password' },
  { id: 'new_password2', label: 'Confirm New password', type: 'password', placeholder: 'Confirm your new password' },
];

const changePasswordProps = {
  id: 'changePassword-form',
  linkTo: 'http://127.0.0.1:8000/auth/password/change/',
  fields: changePasswordFields,
  submitLabel: 'Change Password',
  extraActions: [
    { label: 'Forgot password?', link: '/account/reset-password' },
  ],
};
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen">
    <div class="bg-white shadow-lg rounded-lg p-8 max-w-sm w-full">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Change Your Password</h2>
        <FormComponent {...changePasswordProps} />
      </div>
</body>
</html>
